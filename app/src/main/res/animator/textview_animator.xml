        <objectAnimator
            android:duration="@integer/scale_animator_duration"
            android:propertyName="scaleX"
            android:valueFrom="@integer/default_animation_scale"
            android:valueTo="1.1" />
        <objectAnimator
            android:duration="@integer/scale_animator_duration"
            android:propertyName="scaleY"
            android:valueFrom="@integer/default_animation_scale"
            android:valueTo="1.1" />
    </set>
    <set android:ordering="together">
        <objectAnimator
            android:duration="@integer/scale_animator_duration"
            android:propertyName="scaleX"
            android:valueFrom="1.1"
            android:valueTo="@integer/default_animation_scale" />
        <objectAnimator
            android:duration="@integer/scale_animator_duration"
            android:propertyName="scaleY"
            android:valueFrom="1.1"
            android:valueTo="@integer/default_animation_scale" />
    </set>
</set>